{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "*": ["node_modules*"],
      "@/*": ["src/*"],
      "@/jobs/*": ["src/utils/lib/jobs/*"]
    }
  },
  "include": ["src/**/*", "*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
